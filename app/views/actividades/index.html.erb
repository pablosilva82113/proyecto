<p style="color: green"><%= notice %></p>

<h1>Actividades</h1>
<button type="button" class="btn btn-secondary"><%= link_to "New actividad", new_actividad_path %> </button>

<table class="table table-striped table-hover">
  <thead>
    <tr>
    <th>tipo</th>
    <th>docente_id</th>
    <th>titulo</th>
    <th>descripcion</th>
    <th>Ver actividad</th>
    <th></th>
    </tr>
</thead>
<tbody>
  <% @actividades.each do |a| %>
    <tr>
      <td><%= a.ActividadTipo[:tipo] %></td>
      <td><%= a.Docente[:nombre] %></td>
      <td><%= a[:titulo] %></td>
      <td><%= a[:descripcion] %></td>
      <td><%= link_to "Ver actividad", a %></td>
    </tr>
    <% end %>
    </tbody>
    </table>


