<p style="color: green"><%= notice %></p>

<h1>Colonias</h1>
<button type="button" class="btn btn-info">
<%= link_to "New colonia", new_colonia_path %>

</button>
<table class="table table-striped table-hover">
  <thead>
    <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>Ver colonia </th>
    </tr>
  </thead>
  <tbody>
  <% @colonias.each do |c| %>
    <tr>
    <td><%= c[:id] %></td>
    <td><%= c[:nombre_c] %></td>
    <td><button type="button" class="btn btn-info"> <%= link_to "Show this colonia", c %></button></td>

    </tr>
    <% end %>
  </tbody>

