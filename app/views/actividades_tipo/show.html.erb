<p style="color: green"><%= notice %></p>


<%= link_to "Back to actividad tipos", actividades_tipo_path %>

<h2>Actividades <%=@actividad_tipo.Actividades.count%> </h2>
<table class="table table-striped table-hover">
 <thead>
    <tr>
      <th>id</th>
      <th>tipo</th>
      <th>docente_id</th>
      <th>titulo</th>
      <th>descripcion</th>
      <th>Editar actividad</th>
      <th>Eliminar </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @actividad_tipo.Actividades.each do |a| %>
      <tr>
        <td><%= a[:id] %></td>
        <td><%= a.ActividadTipo[:tipo] %></td>
        <td><%= a.Docente[:nombre] %></td>
        <td><%= a[:titulo] %></td>
        <td><%= a[:descripcion] %></td>
        <td><button type="button" class="btn btn-warning" > <%= link_to "Edit this actividad tipo", edit_actividad_tipo_path(@actividad_tipo) %> </button></td>
        <td><%= button_to "Destroy this actividad tipo", @actividad_tipo, method: :delete %></td> 
      </tr>
      <% end %>
    </tbody>
  </table>





