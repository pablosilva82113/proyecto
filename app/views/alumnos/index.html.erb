<p style="color: green"><%= notice %></p>

<h1>Alumnos</h1>
<button type="button" class="btn btn-secondary"> <%= link_to "Agregar alumno", new_alumno_path %></button>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Especialidad</th>
            <th>Carrera</th>
            <th>Usuario</th>
            <th>No_Control</th>
            <th>Semestre</th>
            <th>Nombre</th>
            <th>Apellido_P</th>
            <th>Apellido_M</th>
            <th>Ver alumno</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        <% @alumnos.each do |a| %>
        <tr>
            <td><%= a.Especialidad[:nombre_especialidad] %></td>
            <td><%= a.Carrera[:carrera] %></td>
            <td><%= a.User[:email] %></td>
            <td><%= a[:no_control] %></td>
            <td><%= a[:semestre] %></td>
            <td><%= a[:nombre] %></td>
            <td><%= a[:apellido_p] %></td>
            <td><%= a[:apellido_m] %></td>
            <td><%= link_to "Ver alumno", a %></td>
      </tr> 
      <% end %>
      </tbody>
      </table>

