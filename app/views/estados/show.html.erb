<p style="color: green"><%= notice %></p>

<%= render @estado %>
<h2>Municipios<%=@estado.Direcciones.count %> </h2>
<table class="table table-striped table-hover">
<thead>
<tr>
  <th>id</th>
  <th>Tipo</th>
  <th>Calle</th>
  <th>Numero exterior</th>
  <th>Numero interior</th>
  <th>Colonia</th>
  <th>Municipio</th>
  <th>Estado</th>
  <th>Codigo postal</th>
  <th>Referencia</th>
 
</tr>
</thead>
<tbody>
<% @estado.Direcciones.each do |d| %>
  <tr>
  <td><%= d[:id] %></td>
    <td><%= d.Tipo[:tipo] %></td>
    <td><%= d[:calle] %></td>
    <td><%= d[:numero_exterior] %></td>
    <td><%= d[:numero_interior] %></td>
    <td><%= d.Colonias[:nombre_c] %></td>
    <td><%= d.Municipios[:nombre_m] %></td>
    <td><%= d.Estados[:nombre_e] %></td>
    <td><%= d[:codigo_postal] %></td>
    <td><%= d[:referencia] %></td>
 
    </tr>
    <% end %>
  </tbody>
  </table>

<div>
  <%= link_to "Edit this estado", edit_estado_path(@estado) %> |
  <%= link_to "Back to estados", estados_path %>

  <%= button_to "Destroy this estado", @estado, method: :delete %>
</div>
